<link rel="stylesheet" href="/assets/css/material-responsive-table.css">
<body>
    <div class="container">
        <main>
            <div class="row">
                <div class="table-responsive-vertical shadow-z-1">
                    <table id="table" class="table table-hover table-mc-light-blue">
                        <thead>
                            <tr>
                                <th data-title="Last Updated">Last Updated</th>
                                <th data-title="Outgoing Date/Time">Outgoing Date/Time</th>
                                <th data-title="Message Body">Message Body</th>
                                <th data-title="Contacts">Contacts</th>
                                <th data-title="Edit">Edit</th>
                                <th data-title="Delete">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dbContacts}}
                            <tr>
                                <td data-title="Last Updated"></td>
                                <td data-title="Outgoing Date/Time">{{scheduled_send}}</td>
                                <td data-title="Message Body">{{outgoing_message}}</td>
                                <td data-title="Contacts">{{phone_number}}</td>
                                <td data-title="Edit"><button class = "btn waves-effect waves-light pink darken-1 tableBtn edit" data-id="{{this.id}}">Edit</button></td>
                                <td data-title="Delete"><button class = "btn waves-effect waves-light pink darken-1 tableBtn modal-trigger" data-target="confirmDeleteModal{{this.id}}">Delete</button></td>
                            </tr>
                            <div id="confirmDeleteModal{{this.id}}" class="modal">
                                <div class="modal-content">
                                    <h4><i class="fas fa-trash-alt"></i> Delete Message?</h4>
                                    <p>Are you sure you would like to delete this pending message?</p>
                                </div>
                                <div class="modal-footer">
                                    <button class = "btn waves-effect waves-light pink darken-1 tableBtn delete" data-id="{{this.id}}">Delete</button>
                                    <a class="modal-close waves-effect waves-green btn-flat">Cancel</a>
                                </div>
                            </div>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
