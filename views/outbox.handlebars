<link rel="stylesheet" href="/assets/css/material-responsive-table.css">
<body>
    <div class="container">
        <main>
            <div class="row">
                <div class="table-responsive-vertical shadow-z-1">
                    <table id="table" class="table table-hover table-mc-light-blue">
                        <thead>
                            <tr>
                                <th>Last Updated</th>
                                <th>Outgoing Date/Time</th>
                                <th>Message Body</th>
                                <th>Contacts</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dbContacts}}
                            <tr>
                                <td></td>
                                <td>{{scheduled_date}}</td>
                                <td>{{outgoing_message}}</td>
                                <td>{{phone_number}}</td>
                                <td><button class = "edit" data-id="{{this.id}}">Edit</button></td>
                                <td><button class = "delete" data-id="{{this.id}}">Delete</button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
